<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".ui.main.profile.ProfilePage">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginTop="10dp"
        android:gravity="center|start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="26dp"
            android:src="@drawable/ic_logo_profile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:fontFamily="@font/urbanist_bold"
            android:text="Profile"
            android:textColor="@color/text_color"
            android:textSize="26sp" />


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="14dp"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_person_holder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/urbanist_bold"
            android:gravity="center"
            android:text="Full name"
            android:textColor="@color/text_color"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_image" />

        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/urbanist_bold"
            android:gravity="center"
            android:text="user@gmail.com"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_name" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="24dp"
            android:background="#EEEEEE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_email" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TextView
            android:id="@+id/edit_profile_btn"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:drawablePadding="14dp"
            android:focusable="true"
            android:gravity="center|start"
            android:paddingHorizontal="20dp"
            android:text="@string/edit_profile"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            app:drawableStartCompat="@drawable/ic_profile_man" />

        <TextView
            android:id="@+id/payment_btn"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:drawablePadding="14dp"
            android:focusable="true"
            android:gravity="center|start"
            android:paddingHorizontal="20dp"
            android:text="@string/payment"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            app:drawableStartCompat="@drawable/ic_profile_payment" />

        <TextView
            android:id="@+id/help_btn"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:drawablePadding="14dp"
            android:focusable="true"
            android:gravity="center|start"
            android:paddingHorizontal="20dp"
            android:text="@string/help"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            app:drawableStartCompat="@drawable/ic_profile_help" />


        <TextView
            android:id="@+id/log_out_btn"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:drawablePadding="14dp"
            android:focusable="true"
            android:gravity="center|start"
            android:paddingHorizontal="20dp"
            android:text="@string/logout"
            android:textColor="#F75555"
            android:textSize="18sp"
            app:drawableStartCompat="@drawable/ic_profile_logout" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>